<%- include("navbar.ejs") %>
<form action="/admin/save_comapny_details" method="post">
<div class="container-fluid bg-white p-4">
    <div class="row">
        <div class="mb-3 col-md-12">
            <h3>About Company Details</h3>
        </div>
        <div class="mb-3 col-6">
            Company Name
            <input type="text" name="company_name" value="<%- company_info.company_name %>" class="form-control">
        </div>
        <div class="mb-3 col-3">
            Company Mobile
            <input type="number" name="company_mobile" value="<%- company_info.company_mobile %>" class="form-control">
        </div>
        <div class="mb-3 col-3">
            Company Email
            <input type="email" name="company_email" value="<%- company_info.company_email %>" class="form-control">
        </div>
        <div class="mb-3 col-12">
            Company Address
            <textarea name="company_address" class="form-control"><%- company_info.company_address %></textarea>
        </div>
        <div class="mb-3 col-4">
            Instagram Link
            <input type="url" name="instagram_link" value="<%- company_info.instagram_link %>" class="form-control">
        </div>
        <div class="mb-3 col-4">
            Telegram Link
            <input type="url" name="telegram_link" value="<%- company_info.telegram_link %>" class="form-control">
        </div>
        <div class="mb-3 col-4">
            Twitter
            <input type="text" name="twitter_link" value="<%- company_info.twitter_link %>" class="form-control">
        </div>
        <div class="mb-3 col-4">
            WhatsApp
            <input type="number" name="whatsapp_no" value="<%- company_info.whatsapp_no %>" class="form-control">
        </div>
        <div class="mb-3 col-4">
            Youtube
            <input type="url" name="youtube_link" value="<%- company_info.youtube_link %>" class="form-control">
        </div>
        <div class="mb-3 col-12 text-center">
            <button class="btn btn-primary">Save Details</button>
        </div>
    </div>
</div>
</form>
<%- include("footer.ejs") %>
